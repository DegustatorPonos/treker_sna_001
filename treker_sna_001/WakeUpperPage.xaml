<Page x:Class="treker_sna_001.WakeUpperPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:treker_sna_001"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WakeUpperPage"
      Style="{DynamicResource pageStyle}">

    <Grid>
        <StackPanel>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Установить напоминание для: "/>
                    <ComboBox Name="napomainanie" Width="100"/>
                    <TextBlock Text=" в "/>
                    <ComboBox x:Name="HourComboBox" Width="50"/>
                    <ComboBox x:Name="MinuteComboBox" Width="50"/>
                </StackPanel>
                <Button Content="Установить" Name="Set" Click="Set_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
