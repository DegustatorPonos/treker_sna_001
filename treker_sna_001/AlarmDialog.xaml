<Window x:Class="treker_sna_001.AlarmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:treker_sna_001"
        mc:Ignorable="d"
        Title="AlarmDialog" Height="200" Width="500"
        Style="{DynamicResource WindowStyle}" Cursor="">
    <Border CornerRadius="12">
        <Border Style="{DynamicResource BorderStyle}">
            <Grid>
                <StackPanel Margin="20">
                    <TextBlock Text="Ержан, вставай, на работу пора!" HorizontalAlignment="Center" FontSize="24"/>
                    <Button Content="Выключить" Click="Button_Click" Margin="10" Height="100" Width="300" FontSize="20"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
