<Page x:Class="treker_sna_001.journalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:treker_sna_001"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="journalPage"
      Style="{DynamicResource pageStyle}">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Добавить запись" Name="addnote" Click="addnote_Click"/>
                <Button Content="Удалить запись"/>
                <Button Content="Очистить журнал"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
